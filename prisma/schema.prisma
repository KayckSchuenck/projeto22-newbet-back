generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int           @id @default(autoincrement())
  email           String        @unique
  password        String
  cpf             String        @unique
  name            String  
  active          Boolean       @default(false)
  activationToken String        @unique
  createdAt       DateTime      @default(now())

  @@map("users")
}

